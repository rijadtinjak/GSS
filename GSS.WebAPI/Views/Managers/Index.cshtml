@model IEnumerable<GSS.Database.Manager>

@{
    ViewData["Title"] = "Managers for " + ViewData["OrganizationName"];
    var user = Context.GetLogiraniKorisnik<LoggedInUser>();
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" asp-route-id="@ViewData["UserId"]" class="btn btn-primary">New Manager</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @item.BirthDate.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                    @if (item.Active)
                    {
                        <a asp-action="Deactivate" asp-route-id="@item.Id" class="btn btn-danger">Deactivate</a>
                    }
                    else
                    {
                        <a asp-action="Activate" asp-route-id="@item.Id" class="btn btn-success">Activate</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (user.Role == typeof(Superuser))
{
    <div>
        <a asp-controller="Users" asp-action="Index">Back to Organizations List</a>
    </div>
}
